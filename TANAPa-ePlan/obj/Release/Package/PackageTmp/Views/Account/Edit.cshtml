@model TANAPa_ePlan.Models.UserProfile
@using GridMvc.Html

        <div class="widget blue">
            <div class="widget-title">
                <h4><i class="icon-reorder"></i>Update System User Information</h4>
                <div class="actions sm-btn-position">
                    <a href="@Url.Action("RoleIndex", "Account")" class="btn btn-default"><i class="icon-backward"></i>User Role</a>
                </div>
            </div>
            <div class="widget-body">
                       <div class="row-fluid">
                             <div class="span5 billing-form"><h4>Update Users</h4>
                            @using (Html.BeginForm("Edit", "Account", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(false);   
                                 
                                @Html.HiddenFor(m => m.UserId)                
                       
                          <div class="control-group ">
                                    <label class="control-label">Username</label>
                                    @Html.TextBoxFor(m => m.UserName, new { @class = "span8",@readOnly =true })
                                </div>
                                <div class="control-group ">
                                    <label class="control-label">First Name</label>
                                    @Html.TextBoxFor(m => m.FirstName, new { @class = "span8" })
                                </div>
                                <div class="control-group ">
                                    <label class="control-label">Middle Name</label>
                                    @Html.TextBoxFor(m => m.MiddleName, new { @class = "span8" })
                                </div>
                                <div class="control-group ">
                                    <label class="control-label">Last Name</label>
                                    @Html.TextBoxFor(m => m.LastName, new { @class = "span8" })
                                </div>
                                <div class="control-group ">
                                    <label class="control-label">Mobile Number</label>
                                    @Html.TextBoxFor(m => m.Mobile, new { @class = "span8" })
                                </div>
                                <div class="control-group ">
                                    <label class="control-label">Email Address</label>
                                    @Html.TextBoxFor(m => m.Email, new { @class = "span8" })
                                </div>
                                <div class="control-group ">
                                    <label class="control-label">Position</label>
                                    @Html.TextBoxFor(m => m.Position, new { @class = "span8" })
                                </div>
                                
                                 <div class="control-group ">
                                    <label class="control-label"></label>
                                 <button type="submit" class="btn btn-primary ">Update </button>
                                </div>
                               
                                              
                            }
                        </div>
                        <div class="span7">  <h4>List of Users</h4>
                            @{Html.RenderAction("UserList", "Account");}
                        </div>
                    </div>
        </div>
@section Scripts {
             @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render(


                         "~/Assets_old/js/jquery-1.10.2.js",
                         "~/Scripts/app/jquery-ui-1.10.0.custom.min.js",
                              "~/Assets_old/js/invoice.js"

 )
}




