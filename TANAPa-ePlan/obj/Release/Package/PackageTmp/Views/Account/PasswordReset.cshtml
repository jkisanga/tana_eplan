@model TANAPa_ePlan.Models.RegisterModel
<div class="widget blue">
            <div class="widget-title">
                <h4><i class="icon-reorder"></i>Add New System User</h4>
                <div class="actions sm-btn-position">
                    <a href="@Url.Action("RoleIndex", "Account")" class="btn btn-default"><i class="icon-backward"></i>User Role</a>
                </div>
            </div>
            <div class="widget-body">
                        <div class="span5 billing-form"><h4>Add New Users</h4>


                            @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(false);                    
                       <div class="row-fluid">
                                <div class="control-group ">
                                    <label class="control-label">Username</label>
                                    @Html.TextBoxFor(m => m.UserName, new { @class = "span8" })
                                </div>
                                <div class="control-group ">
                                    <label class="control-label">Passward</label>
                                    @Html.PasswordFor(m => m.Password, new { @class = "span8" })
                                </div>
                                <div class="control-group ">
                                    <label class="control-label">Confirm Passward</label>
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "span8" })
                                </div>
                                <div class="pull-right">
                                    <button type="submit" class="btn btn-primary ">Submit </button>
                                </div>
                      
            </div>
                            }
                            </div>
                </div>
    </div>