@model TANAPa_ePlan.Models.Department

@{
    ViewBag.Title = "DEPT";
}
<div class="row">
    <div class="col-md-12">
        <h1 class="page-head-line">Department Manager </h1>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
         @{Html.RenderAction("DeptList", "Setup");}
    </div>

    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                ADD/EDIT DEPARTMENT
            </div>
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    @Html.HiddenFor(x => x.DeptId)
                    @Html.ValidationSummary(true)
                    <div class="form-group has-success">
                        <label class="control-label" for="success">DEPT CODE</label>
                        @Html.TextBoxFor(model => model.DeptCode, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.DeptCode)
                    </div>
                    <div class="form-group has-success">
                        <label class="control-label" for="success">DEPT NAME</label>
                        @Html.TextBoxFor(model => model.DeptName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.DeptName)
                    </div>
                    <div class="form-group has-success">
                        <label class="control-label" for="success">HEAD</label>
                        @Html.TextBoxFor(model => model.Head, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Head)
                    </div>                   
                    <hr />
                    <input type="submit" value="Save" class="btn btn-primary" /> 
                }
            </div>
        </div>
    </div>
</div>


