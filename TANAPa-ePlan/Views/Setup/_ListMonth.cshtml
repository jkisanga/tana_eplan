@model IEnumerable<TANAPa_ePlan.Models.Month>
<div class="panel panel-default">
            <div class="panel-heading">
                LIST OF MONTH
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <div class="table table-striped">

@helper RenderActionColumn(int Id)
{
    @Html.ActionLink("Edit", "EditMonth", new { id = Id})
 }

@using GridMvc.Html
        @Html.Grid(Model).Columns(columns =>
           {
               columns.Add(c => c.Quarter.QuarterName)
                   .Titled("Quarter");

               columns.Add(c => c.MonthName)
                   .Format("{0:MMM/yyyy}")
                   .Titled("Month");
               
               columns.Add(c => c.Status)
                   .Titled("Status");
               columns.Add().Titled("Action").Sanitized(false).Encoded(false).RenderValueAs(c => RenderActionColumn(c.MonthId));

           })
                        </div>
                </div>
    </div>
    </div>

